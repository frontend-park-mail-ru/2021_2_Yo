<div class="eventform-background">
    <form class="eventform" id="eventform">
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Название</p>
            <input class="form-input form-input_event-wide" id="titleInput" maxlength="255" value="{{title}}"/>
            <p class="error error_none input-block__error"></p>
        </div>
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Краткое описание</p>
            <textarea class="form-textarea form-textarea_event" id="descriptionInput"
                      rows="4" maxlength="500">{{description}}</textarea>
            <p class="error error_none input-block__error"></p>
        </div>
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Описание</p>
            <textarea class="form-textarea form-textarea_event" id="textInput" rows="12"
                      maxlength="2200">{{text}}</textarea>
            <p class="error error_none input-block__error"></p>
        </div>
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Дата проведения</p>
            <input class="form-input form-input_event-thin" id="dateInput" value="{{date}}" type="date"/>
            <p class="error error_none input-block__error"></p>
        </div>
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Город</p>
            <input class="form-input form-input_event-thin" id="cityInput" value="{{city}}" maxlength="30"/>
            <p class="error error_none input-block__error"></p>
        </div>
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Адрес</p>
            <input class="form-input form-input_event-thin" id="geoInput" value="{{geo}}" maxlength="255"/>
            <p class="error error_none input-block__error"></p>
        </div>
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Категория</p>
            <input class="form-input form-input_event-thin" id="categoryInput" value="{{category}}" maxlength="30"/>
            <p class="error error_none input-block__error"></p>
        </div>
        <div class="input-block">
            <p class="input-block__input-label event-primary-text">Теги</p>
            <div class="buttons-block">
                <input class="form-input form-input_event-thin" id="tagInput" maxlength="30">
                <input value="Добавить" id="tagButton" class="button-white_event-tag button-white"
                       type="button">
            </div>
            <div id="tagBlockError">
                <p class="error error_none"></p>
            </div>
            <div class="event-tags-block" id="tagBlock">
                {{#if tag}}
                    {{#each tag}}
                        <a class="event-tag event-tags-block__event-tag">{{this}}</a>
                    {{/each}}
                {{/if}}
            </div>
        </div>
        <div class="eventform__buttons buttons-block">
            <input type="button" value="Отмена" class="button-white_event-cancel button-white">
            <input type="submit" value="Создать" class="button-blue">
        </div>
    </form>
</div>
