<div class="content">
    <div class="edit-overlay popup_none" id="overlay"></div>
    <div class="back" id="backButton">< Назад</div>
    <div class="primary-white-block event-block">
        <div class="buttons-block">
            <a href="/user?id={{author.id}}" class="buttons-block-wrapper">
            {{#if author.imgUrl}}
                <img src="{{author.imgUrl}}"
                     class="buttons-block-wrapper__icon buttons-block-wrapper__icon_avatar">
            {{else}}
                <img src="https://source.boringavatars.com/marble/32/{{author.name}}"
                     class="buttons-block-wrapper__icon .buttons-block-wrapper__icon_avatar">
            {{/if}}
            <span class="secondary-text">{{author.name}} {{author.surname}}</span>
            </a>
            <span class="buttons-block-wrapper">
                <span class="icon-box">
                    <svg class="icon-box__icon" id="inviteIcon">
                        <use xlink:href="./server/img/sprite.svg#people"></use>
                    </svg>
                    <div class="event-page-popup popup_none" id="invitePopup">
                        <div class="popup-text">
                            Пригласить друга
                        </div>
                        <div class="friend-list" id="friendList">
                        </div>
                        <button class="button-gray friend-list__button friend-list-button_notactive" id="inviteButton">
                            Пригласить
                        </button>
                    </div>
                </span>

                <span class="icon-box" id="shareIcon">
                    <svg class="icon-box__icon icon-box__icon_logout">
                        <use xlink:href="./server/img/sprite.svg#logout"></use>
                    </svg>
                    <div class="event-page-popup popup_none" id="sharePopup">
                        <div class="popup-text">
                            Поделиться ссылкой
                        </div>
                        <div class="share-popup__wrapper">
                            <span class="buttons-block-wrapper">
                                <a href="//https://vk.com/share.php?url={{shareURL}}&title={{event.title}}&image={{event.imgUrl}}"
                                class="icon-box icon-box_big vk-icon" id="vkShare" data-out="true">
                                    <svg class="icon-box__icon">
                                        <use xlink:href="./server/img/sprite.svg#vk"></use>
                                    </svg>
                                </a>
                                <a href="//https://t.me/share/url?url={{shareURL}}&text={{event.title}}"
                                class="icon-box icon-box_big telegram-icon" id="tgShare" data-out="true">
                                    <svg class="icon-box__icon">
                                        <use xlink:href="./server/img/sprite.svg#telegram"></use>
                                    </svg>
                                </a>
                            </span>
                            <span class="icon-box icon-box_big" id="copy">
                                <svg class="icon-box__icon">
                                    <use xlink:href="./server/img/sprite.svg#link"></use>
                                </svg>
                            </span>
                        </div>
                    </div>
                </span>

                {{#if permission}}
                    <span class="icon-box" id="editPopupOpen">
                        <svg class="icon-box__icon">
                            <use xlink:href="./server/img/sprite.svg#pencil"></use>
                        </svg>
                        <div class="event-page-popup popup_none" id="editPopup">
                            <div class="edit-popup__item" id="editButton">
                                <svg class="edit-popup__icon">
                                    <use xlink:href="./server/img/sprite.svg#pencil"></use>
                                </svg>
                                <span class="edit-pop__label"> Редактировать</span>
                            </div>
                            <div class="edit-popup__item" id="deleteButton">
                                <svg class="edit-popup__icon">
                                    <use xlink:href="./server/img/sprite.svg#delete"></use>
                                </svg>
                                <span class="edit-pop__label"> Удалить</span>
                            </div>
                        </div>
                    </span>
                {{else}}
                    <span class="icon-box" id="addFavourite">
                        <svg class="icon-box__icon unlike">
                            <use xlink:href="./server/img/sprite.svg#star"></use>
                        </svg>
                    </span>
                    <span class="icon-box" id="removeFavourite">
                        <svg class="icon-box__icon like">
                            <use xlink:href="./server/img/sprite.svg#star"></use>
                        </svg>
                    </span>
                {{/if}}
            </span>
        </div>

        <div>
            <span class="event-title">{{event.title}}</span>
        </div>

        <div>
            <div class="secondary-text">{{event.date}}</div>
            <div class="secondary-text">{{event.city}}</div>
            <span class="secondary-text">Категория: </span>
            <a class="secondary-text category" href="/?category={{event.category}}">{{event.category}}</a>
        </div>

        {{#if event.tag}}
            <div class="event-tags-block">
                {{#each event.tag}}
                    <a class="event-tags-block__event-tag event-tag" href="/?tags={{this}}">{{this}}</a>
                {{/each}}
            </div>
        {{/if}}

        <div class="primary-text">{{event.description}}</div>

        {{#if event.imgUrl}}
            <img class="event-photo" src="{{event.imgUrl}}">
        {{/if}}

        <div class="primary-text">{{event.text}}</div>

        {{#if event.address}}
            <div>
                <span class="primary-text">Адрес: </span>
                <span class="secondary-text address-text">{{event.address}}</span>
            </div>

            <div id="mapContainer" class="map-container"></div>
        {{/if}}
    </div>
</div>
