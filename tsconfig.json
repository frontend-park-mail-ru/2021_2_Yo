{
    "compilerOptions": {
        // Strict Checks
        "strictNullChecks": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        // Other
        "esModuleInterop": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "baseUrl": "./public",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "./public",
        "./server"
    ]
}
